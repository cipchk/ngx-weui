{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "sourceMap": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "../release",
    "lib": ["es2018", "dom"],
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "ngx-weui": ["./ngx-weui.module"],
      "ngx-weui/*": ["./*"]
    }
  },
  "files": ["./ngx-weui.module.ts"],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  }
}
